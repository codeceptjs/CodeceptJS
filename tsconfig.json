{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "types": ["node"],
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmit": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "typings/tests"],
  "compileOnSave": true,
  "include": [
    "lib",
    "typings"
  ]
}
