{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "DOM"],
    "esModuleInterop": true,
    "module": "es2020",
    "types": ["node"],
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmit": true,
    "strictNullChecks": true,
    "moduleDetection": "force"
  },
  "exclude": ["node_modules", "typings/tests"],
  "compileOnSave": true,
  "include": [
    "lib",
    "typings"
  ]
}
